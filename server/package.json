{
  "name": "podcodar-platform-backend",
  "version": "1.0.0",
  "description": "Node/Express backend project",
  "main": "index.js",
  "repository": "git@github.com:eduhdm/podcodar-platform.git",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./bin/* && tsc ",
    "start": "node ./bin/app.js",
    "test": "yarn jest ./src/tests",
    "dev": "STAGE=dev nodemon --config nodemon.json src/app.ts",
    "docker:start": "docker-compose up",
    "lint": "eslint . --ext .ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run lint"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "./src/config.ts"
    ]
  },
  "dependencies": {
    "@newrelic/native-metrics": "^6.0.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "mockserver": "^3.1.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-promise-router": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/newrelic": "^7.0.0",
    "@types/node": "^15.12.4",
    "@types/pg": "^8.6.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "http-terminator": "^3.0.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "sequelize-cli": "^6.2.0",
    "start-server-and-test": "^1.12.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
